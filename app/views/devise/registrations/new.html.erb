<h1><% provide(:title,"新規ユーザー登録") %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class~="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h1 class="panel-title login-font-size">新規ユーザー登録</h1>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="field from-group col-xs-6">
          <%= f.label t('view.users.number'), class:"control-label"  %><br />
          <%= f.number_field :employee_number, autofocus: true, autocomplete: "employee_number", class:"form-control", placeholder:"決められた社員番号を入力してください!" %>
        </div>
      </div>
      <div class="row">
        <div class="field from-group col-xs-6">
          <%= f.label t('view.users.name'), class:"control-label"  %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder: "名前を入力してください" %>
        </div>
      </div>
      <div class="row">
        <div class="field from-group col-xs-6">
          <%= f.label t('view.users.department'), class:"control-label"  %><br />
          <%= f.select :department, User.departments.keys.to_a, {}, autofocus: true, autocomplete: "department", class:"form-control" %>
        </div>
      </div>

      <div class="field">
        <%= f.label t('view.users.email'), class:"form-conrol" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label t('view.users.cellphone_number'), class:"control-label"  %><br />
        <%= f.number_field :cellphone_number, autofocus: true, autocomplete: "cellphone_number" %>
      </div>

      <div class="field">
        <%= f.label t('view.users.password'), class:"control-label"  %>
        <% if @minimum_password_length %>
        <em><%= @minimum_password_length %>文字以上</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label t('view.users.password_confirmation'), class:"control-label"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit t('view.devise.Sign_up') %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
