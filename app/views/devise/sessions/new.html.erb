<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t('view.users.number')%><br />
    <%= f.number_field :employee_number, autofocus: true, autocomplete: "employee_number" %>
  </div>

  <div class="field">
    <%= f.label t('view.users.email')%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('view.users.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('view.users.remember_me') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('view.users.log_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
