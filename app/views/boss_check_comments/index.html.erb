<p id="notice"><%= notice %></p>

<h1>Boss Check Comments</h1>

<table border="1">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Detail report</th>
      <th>Confirmation</th>
      <th>Confirmation date</th>
      <th>Positive comment</th>
      <th>Negative comment</th>
      <th>Assistance</th>
      <th>Questions</th>
      <th>Report to sales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boss_check_comments.each do |boss_check_comment| %>
      <tr>
        <td><%= boss_check_comment.detail_report.support_program.customer.name %></td>
        <td><%= boss_check_comment.detail_report.support_program.title %></td>
        <td><%= boss_check_comment.confirmation %></td>
        <td><%= boss_check_comment.confirmation_date %></td>
        <td><%= boss_check_comment.positive_comment %></td>
        <td><%= boss_check_comment.negative_comment %></td>
        <td><%= boss_check_comment.assistance %></td>
        <td><%= boss_check_comment.questions %></td>
        <td><%= boss_check_comment.report_to_sales %></td>
        <td><%= link_to 'Show', boss_check_comment %></td>
        <td><%= link_to 'Edit', edit_boss_check_comment_path(boss_check_comment) %></td>
        <td><%= link_to 'Destroy', boss_check_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

