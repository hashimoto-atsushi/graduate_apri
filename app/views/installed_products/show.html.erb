<h1><% provide(:title, t('view.installed_products.installed_product_show')) %></h1>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="upper-box">
    <div>
      <p><b><%= t('view.customers.customer') %>:</b>&emsp;
      <%= @installed_product.customer.name %></p>
    </div>
    <div>
      <p><b><%= t('view.products.name') %>:</b>&emsp;
      <%= @installed_product.product.name %></p>
    </div>
    <div>
      <p><b><%= t('view.installed_products.serial_number') %>:</b>&emsp;
      <%= @installed_product.serial_number %></p>
    </div>
    <div>
      <p><b><%= t('view.installed_products.installed_date') %>:</b>&emsp;
      <%= @installed_product.installed_date.strftime(t('datetime.prompts.year_manth_day')) %></p>
    </div>
    <div>
      <p><b><%= t('view.installed_products.discount_price') %>:</b>&emsp;
      <%= @installed_product.discount_price.to_s(:delimited) %>å††</p>
    </div>
    <div>
      <p><b><%= t('view.products.end_of_production') %>:</b>&emsp;
      <%= @installed_product.product.end_of_production.strftime(t('datetime.prompts.year_manth_day')) %></p>
    </div>
    <div>
      <p><b><%= t('view.products.end_of_service') %>:</b>&emsp;
      <%= @installed_product.product.end_of_service.strftime(t('datetime.prompts.year_manth_day')) %></p>
    </div>

    <div class="create-new">
      <%= link_to t('view.installed_products.edit'), edit_installed_product_path(@installed_product), class:"btn btn-warning" %>
    </div>
    <div class="create-new">
      <%= link_to t('view.installed_products.to_index'), installed_products_path, class:"btn btn-info" %>
    </div>
  </div>
</div>
