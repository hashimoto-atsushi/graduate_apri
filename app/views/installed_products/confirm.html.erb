<h1>納入機器 -登録確認-</h1>
<%= form_with(model: @installed_product, local: true) do |form| %>
<div>
  <%= form.hidden_field :customer_id %>
</div>
<div>
  <%= form.hidden_field :product_id %>
</div>
<div>
  <%= form.hidden_field :serial_number %>
</div>
<div>
  <%= form.hidden_field :installed_date %>
</div>
<div>
  <%= form.hidden_field :discount_price %>
</div>
<div>
  <P><%= t('view.customers.customer') %>: <%= @installed_product.customer.name %></P>
</div>
<div>
  <P><%= t('view.products.name') %>: <%= @installed_product.product.name %></P>
</div>
<div>
  <P><%= t('view.installed_products.serial_number') %>: <%= @installed_product.serial_number %></P>
</div>
<div>
  <P><%= t('view.installed_products.installed_date') %>: <%= @installed_product.installed_date.strftime("%Y年%m月%d日")  %></P>
</div>
<div>
  <P><%= t('view.installed_products.discount_price') %>: <%= @installed_product.discount_price %></P>
</div>
<div>
 <%= form.submit t('view.installed_products.confirm_to_submit')%>
</div>
<div>
  <%= form.submit t('view.installed_products.back'), name: 'back'%>
</div>
<% end %>
