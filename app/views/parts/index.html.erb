<p id="notice"><%= notice %></p>

<h1>Parts</h1>

<table border="1">
  <thead>
    <tr>
      <th><%= t('view.parts.detail_report_id')%></th>
      <th><%= t('view.parts.name')%></th>
      <th><%= t('view.parts.type_name')%></th>
      <th><%= t('view.parts.category')%></th>
      <th><%= t('view.parts.list_price')%></th>
      <th><%= t('view.parts.stock')%></th>
      <th><%= t('view.parts.release_date')%></th>
      <th><%= t('view.parts.end_of_production')%></th>
      <th><%= t('view.parts.end_of_service')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.detail_report_id %></td>
        <td><%= part.name %></td>
        <td><%= part.type_name %></td>
        <td><%= part.category %></td>
        <td><%= part.list_price %></td>
        <td><%= part.stock %></td>
        <td><%= part.release_date %></td>
        <td><%= part.end_of_production %></td>
        <td><%= part.end_of_service %></td>
        <td><%= link_to t('view.parts.show'), part %></td>
        <td><%= link_to t('view.parts.edit'), edit_part_path(part) %></td>
        <td><%= link_to t('view.parts.delete'), part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.parts.to_new'), new_part_path %>
