<%= form_with(model: @part, local: true, url: choose_new_or_edit_part ) do |form| %>
  <% if part.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(part.errors.count, "error") %> prohibited this part from being saved:</h2>

      <ul>
      <% part.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field">
      <%= form.label t('view.parts.detail_report_id') %>
      <%= form.select :detail_report_id, DetailReport.all.map{|o| [o.id, o.id]}, include_blank: "紐付け無" %>
    </div>
    <div class="field">
      <%= form.label t('view.parts.name')  %>
      <%= form.text_field :name %>
    </div>
    <div class="field">
      <%= form.label t('view.parts.type_name')   %>
      <%= form.text_field :type_name %>
    </div>
    <div class="field">
      <%= form.label t('view.parts.category')   %>
      <%= form.text_field :category %>
    </div>
  </div>
  <div class="row">
    <div class="field">
      <%= form.label t('view.parts.list_price')   %>
      <%= form.number_field :list_price %>
    </div>

    <div class="field">
      <%= form.label t('view.parts.stock')   %>
      <%= form.number_field :stock %>
    </div>

    <div class="field">
      <%= form.label t('view.parts.release_date')   %>
      <%= form.date_select :release_date %>
    </div>
  </div>

  <div class="field">
    <%= form.label t('view.parts.end_of_production')   %>
    <%= form.date_select :end_of_production %>
  </div>

  <div class="field">
    <%= form.label t('view.parts.end_of_service')   %>
    <%= form.date_select :end_of_service %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
