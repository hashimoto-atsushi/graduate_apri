<h1><% provide(:title,"保守案件 -詳細-") %></h1>
<p id="notice"><%= notice %></div>

<div class="content-wrapper">
  <div class="container">
    <div class="upper-box">
      <h3>- 保守案件 詳細 -</h3>
      <div class="row">
        <div class="col-xs-4">
            <p><b><%= t('view.support_programs.title_number') %>:&emsp;</b>
            <%= @support_program.title_number %></P>
          </div>
          <div class="col-xs-4">
            <p><b><%= t('view.support_programs.customer') %>:&emsp;</b>
            <%= @support_program.customer.name %></P>
          </div>
          <div class="col-xs-4">
            <p><b><%= t('view.support_programs.title') %>:&emsp;</b>
            <%= @support_program.title %></P>
          </div>
      </div>
      <div class="row">
        <div class="col-xs-4">
          <p><b><%= t('view.support_programs.user') %>:&emsp;</b>
          <%= @support_program.user.name %></P>
          </div>
        <div class="col-xs-4">
          <p><b><%= t('view.support_programs.main_work') %>:&emsp;</b>
          <%= @support_program.main_work %></P>
        </div>
        <div class="col-xs-4">
          <p><b><%= t('view.support_programs.planed_or_argent') %>:&emsp;</b>
          <%= @support_program.planed_or_argent %></P>
        </div>
      </div>
    <div class="row">
      <div class="col-xs-4">
        <p><b><%= t('view.support_programs.order_status') %>:&emsp;</b>
        <%= @support_program.order_status == true ? "受注済" : "未受注" %></P>
      </div>
      <div class="col-xs-4">
        <p><b><%= t('view.support_programs.kick_off_date') %>:&emsp;</b>
        <%= @support_program.kick_off_date %></P>
      </div>
      <div class="col-xs-4">
        <p><b><%= t('view.support_programs.closed') %>:&emsp;</b>
        <%= @support_program.closed %></P>
      </div>
    </div>
      <div class="create-new">
        <% if tech_in_charge_and_admin_display %>
        <%= link_to t('view.support_programs.to_detail_new'), new_support_program_detail_report_path(@support_program.id), class:"btn btn-success btn-lg" %>
        <% end %>
      </div>
      <div>
        <%= link_to t('view.support_programs.to_index'), support_programs_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
