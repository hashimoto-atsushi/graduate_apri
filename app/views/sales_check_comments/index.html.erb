<p id="notice"><%= notice %></p>

<h1>Sales Check Comments</h1>

<table>
  <thead>
    <tr>
      <th>Boss check comment</th>
      <th>Confirmation</th>
      <th>Confirmation date</th>
      <th>Comments</th>
      <th>Discussion possibility</th>
      <th>Matter closed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_check_comments.each do |sales_check_comment| %>
      <tr>
        <td><%= sales_check_comment.boss_check_comment %></td>
        <td><%= sales_check_comment.confirmation %></td>
        <td><%= sales_check_comment.confirmation_date %></td>
        <td><%= sales_check_comment.comments %></td>
        <td><%= sales_check_comment.discussion_possibility %></td>
        <td><%= sales_check_comment.matter_closed %></td>
        <td><%= link_to 'Show', sales_check_comment %></td>
        <td><%= link_to 'Edit', edit_sales_check_comment_path(sales_check_comment) %></td>
        <td><%= link_to 'Destroy', sales_check_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

