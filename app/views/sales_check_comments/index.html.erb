<p id="notice"><%= notice %></p>

<h1>営業確認 一覧</h1>

<table border="1">
  <thead>
    <tr>
      <th><%= t('view.customers.customer') %></th>
      <th><%= t('view.support_programs.title') %></th>
      <th><%= t('view.sales_check_comments.confirmation') %></th>
      <th><%= t('view.sales_check_comments.confirmation_date') %></th>
      <th><%= t('view.sales_check_comments.comment') %></th>
      <th><%= t('view.sales_check_comments.discussion_possibility') %></th>
      <th><%= t('view.sales_check_comments.matter_closed') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_check_comments.each do |sales_check_comment| %>
      <tr>
        <td><%= sales_check_comment.boss_check_comment.detail_report.support_program.customer.name %></td>
        <td><%= sales_check_comment.boss_check_comment.detail_report.support_program.title %></td>
        <td><%= sales_check_comment.confirmation %></td>
        <td><%= sales_check_comment.confirmation_date %></td>
        <td><%= sales_check_comment.comments %></td>
        <td><%= sales_check_comment.discussion_possibility %></td>
        <td><%= sales_check_comment.matter_closed %></td>
        <td><%= link_to t('view.sales_check_comments.show'), sales_check_comment %></td>
        <td><%= link_to t('view.sales_check_comments.delete'), sales_check_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
