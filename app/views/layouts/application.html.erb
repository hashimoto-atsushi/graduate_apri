<!DOCTYPE html>
<html>
  <head>
    <title>Apri for Graduation</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="">
    <div class="header-wrap">
      <nav class="navbar-navbar-default" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <div class="navbar-brand">
              <a href="#"> <%= image_tag "TEST.png", class:"logo"%></a>
              <span><%= full_title(yield(:title)) %></span>
            </div>
          </div>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class=""><%= link_to t('view.layouts.to_top'), top_index_path %></li>
                <li><%= link_to current_user.name + t('view.layouts.my_page'), user_path(current_user.id) %></li>
                <li><%= link_to t('view.layouts.logout'), destroy_user_session_path, method: :delete %></li>
              <% end %>
              <% if user_signed_in? && current_user.permission %>
                <li><%= link_to t('view.layouts.admin'), rails_admin_path %></li>
              <% end %>
            </div>
        </div>
      </nav>
    </div>
  </header>
  <body>
    <div class="content_wrapper">
      <div class="side_bar">
        <% if user_signed_in? %>
        <%= render 'layouts/side_bar' %>
        <% end %>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    </div>
  </body>
  <footer>

  </footer>
</html>
